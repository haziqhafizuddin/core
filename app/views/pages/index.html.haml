.flex.flex-col.items-center.justify-center
  .text-xl.font-bold.flex.flex-col.text-gray-900.mb-5
    %span.uppercase.text-center= greeting
.flex.flex-wrap
  .w-full{ class: 'md:w-1/2 xl:w-1/3 p-3' }
    .bg-white.border.rounded.shadow.p-2
      .flex.flex-row.items-center
        .flex-shrink.pr-4
          .rounded.p-3.bg-indigo-600
            %svg.h-6.w-6.text-gray-50{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
        .flex-1.text-center
          %h5.font-bold.uppercase.text-gray-500 Date
          %h3.font-bold= l(Date.current, format: :month_date_only)
  .w-full{ class: 'md:w-1/2 xl:w-1/3 p-3' }
    .bg-white.border.rounded.shadow.p-2
      .flex.flex-row.items-center
        .flex-shrink.pr-4
          .rounded.p-3.bg-green-400
            %svg.h-6.w-6.text-gray-50{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
