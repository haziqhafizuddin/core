          %h5.font-bold.uppercase.text-gray-500 Forecast
          %h3.font-bold= @condition['value']
  .w-full{ class: 'md:w-1/2 xl:w-1/3 p-3' }
    .bg-white.border.rounded.shadow.p-2
      .flex.flex-row.items-center
        .flex-shrink.pr-4
          .rounded.p-3.bg-red-400
            %svg.h-6.w-6.text-gray-50{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "M8 7l4-4m0 0l4 4m-4-4v18", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
